footer.footer
    .container
        .footer__text Terms and conditions
        .footer__text Privacy
        .socials
            .socials__follow Follow
            - var socials = ['facebook', 'twitter', 'instagram']
            ul.socials__list
                each item in socials
                    li.socials__item
                        a(href="#" class="socials__link_#{item}").socials__link= item